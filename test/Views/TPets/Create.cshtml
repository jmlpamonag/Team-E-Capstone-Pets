@model test.TPet

@{
	ViewBag.Title = "Create";
}

<h2>Create</h2>

<p style="margin-left: 25px; font-size:15px">
	<button class="btn-primary" onclick="location.href='@Url.Action("Index", "TPets")';return false;">
		<i class="fas fa-arrow-left"></i>  Back to List
	</button>
</p>

@using (Html.BeginForm("Create", "TPets", null, FormMethod.Post, new { enctype = "multipart/form-data" })) {
	@Html.AntiForgeryToken()

