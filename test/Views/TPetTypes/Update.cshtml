@model test.TPetType

<h2> Pet Type </h2>

@using (Html.BeginForm("Update", "TPetTypes", FormMethod.Post, new { role = "form", id = "updateForm" })) {
	@Html.ValidationSummary(true)
	@Html.AntiForgeryToken()

	<div class="form-group">
		@Html.HiddenFor(model => model.intPetTypeID)
		@Html.LabelFor(model => model.strPetType, "Pet Type:")
		@Html.TextBoxFor(model => model.strPetType, new { @class = "form-control" })
	</div>


	<button type="submit" class="btn-primary">Update</button>

	@Html.ActionLink("Back To List", "Index", null, new { @style = "margin-left:50px; font-weight:bold;" })
	<div id="msg"></div>
}
